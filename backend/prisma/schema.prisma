generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://karan:karan123@localhost:5432/resq?schema=public"
}

model User {
  id               Int               @id @default(autoincrement())
  email            String            @unique
  name             String
  password         String
  lat              Float             @unique
  lng              Float             @unique
  role             Role
  ambulanceProfile AmbulanceProfile?
  hospitalProfile  HospitalProfile?
  trafficProfile   TrafficProfile?
}

model AmbulanceProfile {
  id          Int    @id @default(autoincrement())
  phoneNumber String @unique
  user        User   @relation(fields: [userId], references: [id])
  userId      Int    @unique
}

model HospitalProfile {
  id          Int     @id @default(autoincrement())
  phoneNumber String  @unique
  location    String
  status      Boolean @default(true)
  user        User    @relation(fields: [userId], references: [id])
  userId      Int     @unique
}

model Notification {
  id        Int     @id @default(autoincrement())
  Bylat     Float
  Bylng     Float
  Tolat     Float
  Tolng     Float
  status      Boolean  @default(false)
}


model TrafficProfile {
  id          Int     @id @default(autoincrement())
  phoneNumber String  @unique
  location    String
  status      Boolean @default(true)
  user        User    @relation(fields: [userId], references: [id])
  userId      Int     @unique
}

enum Role {
  ADMIN
  AMBULANCE
  HOSPITAL
  TRAFFIC
}
